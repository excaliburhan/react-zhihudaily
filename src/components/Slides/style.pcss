.slides {
  position: relative;
  display: block;
  width: 100%;
  height: 200px;
  overflow: hidden;
  &Img {
    width: 100%;
  }
  &Title {
    position: absolute;
    bottom: 20px;
    line-height: 1.2;
    padding: 0 20px;
    color: #fff;
    font-size: 18px;
    font-weight: bold;
    text-shadow: 0px 1px 2px rgba(0,0,0,0.3);
  }
}
